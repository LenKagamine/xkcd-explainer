{
  "manifest_version": 2,

  "name": "xkcd explainer",
  "description": "Displays an explanation of an opened xkcd comic from the explain xkcd wiki.",
  "version": "1.0",
  "author": "Michael Kim",
  "homepage_url": "https://github.com/lenkagamine/xkcd-explainer",
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [{
    "matches": ["http://xkcd.com/*"],
    "css": ["explain.css"],
    "js": ["main.js", "parser.js"]
  }],
  "permissions": [
    "http://explainxkcd.com/*"
  ]
}
